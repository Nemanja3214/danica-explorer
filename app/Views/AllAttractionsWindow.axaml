<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="using:app.ViewModels"
             x:DataType="vm:AllAttractionsViewModel"
             x:Class="app.Views.AllAttractionsWindow">
	
    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="800" MaxWidth="1500">
		<StackPanel Orientation="Vertical" VerticalAlignment="Center">
			<TextBlock TextAlignment="Center"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       FontSize="32"
                       Text="Sve atrakcije iz asortimana"
                       Margin="20"/>
            <UniformGrid Columns="4" HorizontalAlignment="Stretch" Name="Grid" ScrollViewer.VerticalScrollBarVisibility="Visible">
            </UniformGrid>
        </StackPanel>
    </ScrollViewer>

</UserControl>
